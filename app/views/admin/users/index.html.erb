<h1>Admin Users</h1>

<table class="table">
  <tr>
    <th>ID</th>
    <th>Email</th>
    <th>Groups</th>
    <th>Action</th>
  </tr>
  <% @users.each do |u| %>
  <tr>
    <td><%= u.id%></td>
    <td><%= u.email %></td>
    <td>
      <% u.groups.each do |g| %>
        <%= g.name %><br>
      <% end %>
    </td>
    <td><%= link_to "Edit", edit_admin_user_path(u), :class => "btn btn-default" %></td>
  </tr>
  <% end %>
</table>
